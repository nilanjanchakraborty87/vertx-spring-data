
{{# partial "pageScript"}}
      <script src="/js/task-table.js"></script>
{{/partial}}

 
{{# partial "navigationBarActions" }}
    <a title="create a new to-do task" class="element" href="/tasks/create"> 
            <span class="icon-plus-2 on-left"></span><span>new task</span>
    </a>
{{/partial}}


{{# partial "mainBody" }}
    <div id="controlSection" class="grid pos-rel">
        <h1> 
            <i class="icon-clipboard-2 smaller"></i> to-do<small class="on-right">list</small>
        </h1>

        <div class="button-set place-bottom-right" data-role="button-group" id="filterButtons">
            <span class="place-left on-left-more icon-arrow-right-3" style="margin-top: 5px"></span>
            <button id="all" {{ifEqual filter 'all' "class=active"}} 
               title="view all tasks"> all </button>
            <button id="open" {{ifEqual filter 'open' "class=active"}}  
               title="view only open tasks"> open </button>
            <button id="done" {{ifEqual filter 'done' "class=active"}} 
               title="view only done tasks" > done </button>           
        </div>
    </div>
    <table class="table hovered">
        <thead>
            <tr>
                <th class="text-left span1" style="border-bottom: 1px solid #111;">Done</th>
                <th class="text-left span8" style="border-bottom: 1px solid #111;">Name</th>
                <th class="text-left span3" style="border-bottom: 1px solid #111;">Priority</th>
            </tr>
        </thead>
        <tbody>
            {{#todos}}  
                <tr>
                   <td> <i class="icon-checkbox{{#unless completed}}-unchecked{{/unless}} fg-grayLight"></i> </td>                       
                   <td> {{#if id}} <a href="/tasks/{{id}}">{{name}}</a> {{else}} {{name}} {{/if}} </td>
                   <td> {{priority}} </td>
                </tr>
            {{/todos}}    
        </tbody>
    </table>
{{/partial}}

{{> layout}}